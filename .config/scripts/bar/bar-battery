#!/bin/sh

case $BUTTON in
	3) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

NUM=`cat /sys/class/power_supply/BAT0/capacity` || exit
STATUS=`cat /sys/class/power_supply/BAT0/status`

if [ "$NUM" -ge 80 ]; then
	color="#00FF00"
elif [ "$NUM" -ge 60 ]; then
	color="#FFFFFF"
elif [ "$NUM" -ge 40 ]; then
	color="#FFF600"
elif [ "$NUM" -ge 20 ]; then
	color="#FFAE00"
else
	color="#FF0000"
fi

[ "$STATUS" = "Charging" ] && color="#FFF"

#echo " `sed -e "s/,//g;s/Discharging/ðŸ”‹/;s/Charging/ðŸ”Œ/;s/Unknown/âš¡/;s/Full/ðŸ¤”/;s/ 0*/ /g;s/ :/ /g" <<<"$STATUS"` `sed -e 's/$/%/' <<<"$NUM"` "
echo " `sed -e "s/,//g;s/Discharging/ï‰/;s/Charging/ï‡¦/;s/Unknown/ïƒ§/;s/Full/ïƒ§/;s/ 0*/ /g;s/ :/ /g" <<<"$STATUS"` `sed -e 's/$/%/' <<<"$NUM"` "
